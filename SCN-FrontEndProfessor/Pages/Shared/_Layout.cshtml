    <div id="loginModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" id="closeModal">&times;</span>

            <!-- Logo Container -->
            <div class="logo-container">
                <img src="\images\ucr.png" alt="Logo" class="logo">
            </div>

            <!-- Login Form (default view) -->
            <div class="form-container" id="loginFormContainer">
                <h2>Iniciar sesión</h2>
                <form id="loginForm">
                    <input type="text" id="username" placeholder="Usuario" required>
                    <br />
                    <input type="password" id="password" placeholder="Contraseña" required>
                    <br />
                    <button type="submit" id="loginButton">Iniciar sesión</button>
                </form>
            </div>

            <div class="form-container" id="registerFormContainer" style="display: none;">
                <h2>Registrarse</h2>
                <form id="registerForm">
                    <input type="text" id="name" placeholder="Nombre" required maxlength="50">
                    <br />
                    <input type="text" id="lastName" placeholder="Apellido" required maxlength="50">
                    <br />
                    <input type="email" id="email" placeholder="Correo electrónico" required maxlength="50">
                    <br />
                    <input type="text" id="userName" placeholder="Usuario" required maxlength="50">
                    <br />
                    <input type="password" id="password" placeholder="Contraseña" required maxlength="50">
                    <br />
                    <button type="submit" id="registerButton">Registrarse</button>
                </form>
            </div>

        </div>
