                            <button onclick="openModal1()">Edit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- MODAL DE EDICIÓN MEJORADO -->
    <div id="edit-professor-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md transform transition-all scale-100">
            <h3 class="text-3xl font-bold text-gray-800 mb-6 text-center">Edit Profile</h3>
            <form id="professor-form" class="space-y-4">

                <input type="hidden" id="professor-id">

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Name</label>
                    <input id="new-professor-name" type="text" class="w-full p-3 border rounded-lg focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Last Name</label>
                    <input id="new-professor-lastname" type="text" class="w-full p-3 border rounded-lg focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Email</label>
                    <input id="new-professor-email" type="email" class="w-full p-3 border rounded-lg focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Username</label>
                    <input id="new-professor-username" type="text" class="w-full p-3 border rounded-lg focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Status</label>
                    <input id="new-status" type="text" class="w-full p-3 border rounded-lg focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Profile URL</label>
                    <input id="professor-profile-url" type="url" class="w-full p-3 border rounded-lg focus:ring-blue-500">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Interests</label>
                    <textarea id="new-professor-description" class="w-full p-3 border rounded-lg focus:ring-blue-500"></textarea>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Upload Photo</label>
                    <input id="new-professor-photo" type="file" accept="image/*" class="w-full p-3 border rounded-lg bg-white text-gray-700">
                </div>

                <div class="flex justify-between mt-6">
                    <button type="button" onclick="closeModal1()" class="px-5 py-2 text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300">
                        Cancel
                    </button>
                    <button type="submit" class="px-5 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>


   
