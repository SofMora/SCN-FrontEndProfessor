    <!-- SCHEDULE -->
    <section id="schedule">
        <div class="container">
            <h2 class="text-center">Schedule</h2>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Día</th>
                            <th>Hora</th>
                        </tr>
                    </thead>
                    <tbody id="schedule-list">
                        <!-- Los horarios se agregarán dinámicamente aquí -->
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- APPOINTMENTS -->

    <section id="appointment">
        <div class="container">
            <h2 class="text-center">Professor's Appointments</h2>

            <div class="row">
                <!-- Citas asignadas -->
                <div class="col-md-6">
                    <h3 class="text-center">Scheduled Appointments</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody id="scheduled-appointments"></tbody>
                        </table>
                    </div>
                </div>

                <!-- Solicitudes de citas -->
                <div class="col-md-6">
                    <h3 class="text-center">Appointment Requests</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Comments</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="appointment-requests"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal para aceptar/rechazar citas -->
    <div id="decision-modal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeDecisionModal()">&times;</span>
            <h3>Provide a Reason</h3>
            <p><strong>Student:</strong> <span id="modal-student"></span></p>
            <textarea id="decision-message" class="form-control" placeholder="Enter your reason..."></textarea>
            <button class="btn-accept" onclick="sendDecision('accepted')">Aceptar</button>
            <button class="btn-reject" onclick="sendDecision('rejected')">Rechazar</button>
            <button class="btn-cancel" onclick="closeDecisionModal()">Cancelar</button>
        </div>
    </div>


    <style>
        /* Estilos para el modal */
        .modal {
            display: none; /* Por defecto, el modal está oculto */
            position: fixed;
            z-index: 1; /* Se asegura de que el modal esté por encima de todo */
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto; /* Si el contenido es grande, permite el desplazamiento */
            background-color: rgb(0,0,0); /* Fondo negro con opacidad */
            background-color: rgba(0,0,0,0.4); /* Fondo con opacidad */
            padding-top: 100px; /* Espacio desde arriba */
        }

        /* Contenido del modal */
        .modal-content {
            background-color: #fefefe;
            margin: 5% auto; /* Centrado en la pantalla */
            padding: 20px;
            border: 1px solid #888;
            width: 100%; /* Puedes ajustar el ancho del modal */
            max-width: 980px; /* Máximo ancho del modal */
            box-shadow: 0 4px 8px rgba(0,0,0,0.2); /* Sombra para el modal */
        }

        /* Estilo para el botón de cerrar */
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        /* Botón de cancelar */
        .btn-cancel {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
        }

        .btn-cancel:hover {
            background-color: #d32f2f;
        }

        .btn-submit {
            background-color: green;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
        }

            .btn-submit:hover {
            background-color: green;
            }

        /* Estilo del textarea */
        #decision-message {
            width: 100%;
            height: 100px;
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    </style>




    <!-- CONSULT -->

    <section id="consult">
        <div class="container">
            <h2 class="text-center">Student Questions</h2>

            <div class="row">
                <!-- Consultas públicas -->
                <div class="col-md-6">
                    <h3 class="text-center">Public</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Author</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Course</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="public-consultations">
                                <!-- Las consultas públicas se cargarán aquí -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Consultas privadas -->
                <div class="col-md-6">
                    <h3 class="text-center">Private</h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Author</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Course</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="private-consultations">
                                <!-- Las consultas privadas se cargarán aquí -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Modal para responder consultas -->
    <div id="response-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Reply to Consultation</h3>
            <p id="consult-description"></p>
            <textarea id="response-text" class="form-control" placeholder="Write your response..."></textarea>
            <button class="submit-btn" id="submit-response">Submit Response</button>
        </div>
    </div>
    <!-- Modal para ver respuestas -->
    <div id="replies-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Replies to Consultation</h3>
            <div id="replies-list">
