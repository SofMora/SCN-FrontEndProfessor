    <!-- PROFILE -->
    <section id="profile">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-1 col-md-4 col-sm-12">
                    <div class="profile-card">
                        <div class="profile-photo">
                            <img id="professor-photo" src="/images/pp.jpg" alt="Professor Photo">
                        </div>
                        <div class="profile-info">
                            <h2 id="professor-name">Loading...</h2>
                          
                            <p id="professor-email">Loading...</p>
                           
